<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/schedule_ride_recycler_margin"
    android:layout_marginEnd="@dimen/schedule_ride_recycler_margin"
    android:layout_marginBottom="@dimen/schedule_ride_recycler_margin">

    <!--Recycler View used to show Halt Locations-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_halt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>