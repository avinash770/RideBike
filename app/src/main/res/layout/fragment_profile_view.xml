<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Layout for header containing user icon, name, badge-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_imageview"
            android:layout_width="@dimen/frag_profile_user_icon_size"
            android:layout_height="@dimen/frag_profile_user_icon_size"
            android:layout_marginTop="@dimen/frag_profile_user_icon_mTop"
            android:background="@drawable/gradient_circle_bg_nav_head"
            android:padding="@dimen/frag_profile_user_icon_padding"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/ic_nav_user_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_imageview">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/frag_profile_user_badge_size"
                android:layout_height="@dimen/frag_profile_user_badge_size"
                android:padding="@dimen/frag_profile_user_badge_padding"
                android:src="@drawable/ic_nav_medal" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_display_bold"
                android:text="@string/user_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@string/veteran_rider"
            android:textColor="@color/frag_profile_user_type_text_bg"
            android:textSize="@dimen/frag_profile_user_type_text_size"
            app:layout_constraintEnd_toEndOf="@id/user_name"
            app:layout_constraintStart_toStartOf="@id/user_name"
            app:layout_constraintTop_toBottomOf="@id/user_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--User ride details layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/frag_profile_ride_detail_margin"
        android:layout_marginTop="@dimen/frag_profile_ride_detail_margin"
        android:layout_marginEnd="@dimen/frag_profile_ride_detail_margin"
        android:padding="@dimen/frag_profile_ride_detail_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_profile_head">

        <TextView
            android:id="@+id/tv_rides_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:includeFontPadding="false"
            android:text="25"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/frag_profile_ride_detail_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_kms_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:includeFontPadding="false"
            android:text="650"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/frag_profile_ride_detail_text_size"
            app:layout_constraintEnd_toEndOf="@id/tv_kms_covered"
            app:layout_constraintStart_toStartOf="@id/tv_kms_covered"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_friends_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:includeFontPadding="false"
            android:text="50"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/frag_profile_ride_detail_text_size"
            app:layout_constraintEnd_toEndOf="@id/tv_friends"
            app:layout_constraintStart_toStartOf="@id/tv_friends"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frag_profile_ride_detail_text_mTop"
            android:fontFamily="@font/sf_ui_display_regular"
            android:includeFontPadding="false"
            android:text="Total Rides"
            android:textColor="@color/frag_profile_ride_detail_text_desc_bg"
            android:textSize="@dimen/frag_profile_ride_detail_text_desc_size"
            app:layout_constraintEnd_toEndOf="@id/tv_rides_value"
            app:layout_constraintStart_toStartOf="@id/tv_rides_value"
            app:layout_constraintTop_toBottomOf="@id/tv_rides_value" />

        <TextView
            android:id="@+id/tv_kms_covered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dashboard_band_id_val_margin_top"
            android:fontFamily="@font/sf_ui_display_regular"
            android:includeFontPadding="false"
            android:text="Kms Covered"
            android:textColor="#848484"
            android:textSize="@dimen/frag_profile_ride_detail_text_desc_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_kms_value" />

        <TextView
            android:id="@+id/tv_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dashboard_band_id_val_margin_top"
            android:fontFamily="@font/sf_ui_display_regular"
            android:includeFontPadding="false"
            android:text="Friends"
            android:textColor="#848484"
            android:textSize="@dimen/frag_profile_ride_detail_text_desc_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_friends_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Recycler view for list-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_profile_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/frag_profile_rv_mStart"
        android:layout_marginTop="@dimen/frag_profile_rv_mTop"
        android:layout_marginEnd="@dimen/frag_profile_rv_mStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_profile_id_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>