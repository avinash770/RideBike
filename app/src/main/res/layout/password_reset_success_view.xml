<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Tick Icon-->
    <ImageView
        android:id="@+id/tick_icon"
        android:layout_width="@dimen/pass_change_icon_size"
        android:layout_height="@dimen/pass_change_icon_size"
        android:background="@drawable/pass_changed_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Heading-->
    <TextView
        android:id="@+id/heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pass_change_margin"
        android:fontFamily="@font/sf_ui_display_semibold"
        android:gravity="center"
        android:text="@string/pass_reset_success"
        android:textSize="@dimen/pass_change_heading_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tick_icon" />

    <!--SUb heading -->
    <TextView
        android:id="@+id/subheading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pass_change_marginTop"
        android:fontFamily="@font/sf_ui_display_regular"
        android:gravity="center"
        android:text="@string/you_can_login"
        android:textSize="@dimen/subheading_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading" />

</androidx.constraintlayout.widget.ConstraintLayout>