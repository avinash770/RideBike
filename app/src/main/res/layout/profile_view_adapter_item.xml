<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/frag_profile_rv_item_mBottom"
    android:paddingStart="@dimen/frag_profile_rv_item_padding"
    android:background="@drawable/profile_view_adapter_bg"
    android:paddingTop="@dimen/frag_profile_rv_item_padding"
    android:paddingEnd="@dimen/frag_profile_rv_item_pEnd"
    android:paddingBottom="@dimen/frag_profile_rv_item_padding">

    <!--Item title-->
    <TextView
        android:id="@+id/tv_profile_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_ui_display_semibold"
        android:textColor="@color/bottom_bar_icon_color"
        android:textSize="@dimen/frag_profile_rv_item_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Forward icon-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_profile_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Small text-->
    <TextView
        android:id="@+id/tv_profile_list_sub_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/frag_profile_rv_item_mEnd"
        android:textColor="@color/frag_profile_rv_item_small_text_bg"
        android:textSize="@dimen/frag_profile_rv_item_small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_profile_right_icon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>