<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ridebike">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/app_logo_square"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/app_logo_round"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".views.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.ScheduleRideActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.CreateGroupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".views.MainHomeScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.JoinGroupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.VehicleDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.AddFriendsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.SelectInterestActivity"
            android:screenOrientation="portrait" />

    </application>


</manifest>